---
// About Page
// ------------
// Description: The About page introduces PromptMarketing's team, philosophy, and approach.

// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - SEO Schemas
import OrganizationSchema from '../components/seo/OrganizationSchema.astro'
// - Layout components
import Section from '../components/ui/Section.astro'
import Row from '../components/ui/Row.astro'
import Col from '../components/ui/Col.astro'
// - Blocks
import Hero from '../components/blocks/hero/SimpleHeroPrimary.astro'
import CTA from '../components/blocks/cta/CTAPrimary.astro'
// - UI
import Header from '../components/ui/Header.astro'
import FeatureBasicCard from '../components/ui/cards/FeatureBasicCard.astro'
import DecorationBorder from '../components/ui/DecorationBorder.astro'
// - Partner logos
import logoAiam from '../assets/logos/partner-aiam.svg'
import logoPromptwatch from '../assets/logos/partner-promptwatch.svg'
import logoEverywhere from '../assets/logos/partner-everywhere.svg'
import logoGoogle from '../assets/logos/partner-google.svg'

// Content
// - SEO
const SEO = {
	title: 'PromptMarketing | About Us',
	description:
		'Meet the Team of specialist consultants building the future of AI visibility. Based in Amsterdam, working globally on Generative Engine Optimization.'
}
// - Hero data
const heroData = {
	title: 'Why We Exist',
	subtitle: 'About Us',
	text: 'The shift from search to synthesis is happening now. When people ask AI for recommendations, the model doesn\'t return a list of links—it makes choices. It synthesises, summarises, and selects. If your brand isn\'t part of that synthesis, you\'re invisible.'
}
// - CTA data
const ctaData = {
	title: 'Interested in Working With Us?',
	text: "We take on a limited number of engagements to ensure depth over breadth. If you're serious about AI visibility, let's talk.",
	buttonLink: '/contact',
	buttonText: 'Start a Conversation'
}
// - Values data
const valuesData = [
	{
		title: 'Measurement Over Opinion',
		description: "If we can't measure it, we don't claim it. Every technical action is tied to an observable shift in AI visibility metrics."
	},
	{
		title: 'Transparency By Default',
		description: 'We show our work. Clients see the methodology, the risks, the reasoning. No black boxes, no proprietary "magic."'
	},
	{
		title: 'Long-Term Thinking',
		description: "Quick wins that create technical debt aren't wins. We build architecture that serves brands for years, not quarters."
	},
	{
		title: 'Honest Limitations',
		description: "We'll tell you when something is outside our expertise or when your expectations exceed what's possible. Trust requires honesty."
	}
]
// - Team data
const teamMembers = [
	{
		name: 'Arjan ter Huurne',
		title: 'Founder',
		description: '20 years in Search marketing; pioneer in shifting from referral engines to generative experiences.',
		photo: '/team/arjan-ter-huurne.jpeg',
		objectPosition: 'center 30%'
	},
	{
		name: 'Bart Kalisvaart',
		title: 'AI Developer',
		description: '15 years dev experience; expert in AI workflows, agents, and platform integrations like ACP and MCP.',
		photo: '/team/bart-kalisvaart.jpeg',
		objectPosition: 'center 80%'
	},
	{
		name: 'Erik Jan Reijenga',
		title: 'Business Consultant',
		description: 'Agency COO & CEO exp; bridges the gap between technical AI engineering and enterprise growth strategies.',
		photo: '/team/erik-jan-reijenga.jpeg',
		objectPosition: 'center 30%'
	},
	{
		name: 'Fleur Steenbrink',
		title: 'GEO / Content',
		description: '10 years SEO experience; specialist in AEO/GEO content strategies and semantic HTML foundations.',
		photo: '/team/fleur-steenbrink.jpeg'
	},
	{
		name: 'Ramon Gulikers',
		title: 'GEO / Technical',
		description: '13 years SEO experience; expert in technical SXO audits and off-page authority building.',
		photo: '/team/ramon-gulikers.jpeg'
	},
	{
		name: 'Wouter van der Meij',
		title: 'GEO / Technical',
		description: '16 years SEO experience; specialist in optimizing site architecture and EEAT signals for machine trust.',
		photo: '/team/wouter-van-der-meij.png'
	},
	{
		name: 'Thomas Huijsmans',
		title: 'AI Developer',
		description: 'AI Developer building websites and applications with Next.js and Astro. Experienced with AI integrations.',
		photo: '/team/thomas-huijsmans.jpg'
	}
]
// - Partners data
const partnersData = [
	{
		name: 'AI.AM',
		logo: logoAiam,
		description: 'Our office space is the AI.AM Hub in Amsterdam - breeding ground for AI startups. All our processes & workflows are AI powered.'
	},
	{
		name: 'Promptwatch',
		logo: logoPromptwatch,
		description: 'Deep partnership with this leading AI Visibility tool. We get founder-level support and give feedback on product roadmap.'
	},
	{
		name: 'Everywhere Network',
		logo: logoEverywhere,
		description: 'International Agency Network, access to more than 15 markets. We collaborate as an innovation hub in AI Search.'
	},
	{
		name: 'Google',
		logo: logoGoogle,
		description: "Instrumental company throughout Arjan's career. We've built strong relationships in many parts of the Google org."
	}
]

---

<Layout title={SEO.title} description={SEO.description}>
	<OrganizationSchema />
	<Hero title={heroData.title} subtitle={heroData.subtitle} text={heroData.text} />

	<!-- Introduction Section -->
	<Section decorationBorder="top bottom">
		<Row decorationBorder="top bottom" decorationBorderStyle="dashed" style="transparent">
			<Col span="12" style="transparent">
				<div class="bg-white px-6 py-12 lg:px-8 lg:py-16 dark:bg-neutral-950">
					<p class="mx-auto max-w-4xl text-xl leading-relaxed text-neutral-600 lg:text-2xl dark:text-neutral-400">
						Most marketing agencies haven't noticed. They're still optimising for
						algorithms that rank pages, not models that understand meaning. We built
						PromptMarketing because someone needs to bridge that gap—with rigor, not
						hype.
					</p>
				</div>
				<DecorationBorder type="top bottom" style="dashed" />
			</Col>
		</Row>
	</Section>

	<!-- Partners Section -->
	<Section decorationBorder="none">
		<Row decorationBorder="top bottom" decorationBorderStyle="dashed" style="transparent">
			<Col span="12" style="transparent">
				<div class="bg-white/80 dark:bg-neutral-950/80">
					<div class="pt-12 pb-8 lg:pt-16">
						<Header title="Our Partners" headingLevel="h2" titleWidth="max-w-2xl" />
					</div>
					<div class="grid grid-cols-1 lg:grid-cols-2">
						{partnersData.map((partner) => (
							<div class="border-t border-dashed border-neutral-200 dark:border-neutral-700">
								<div class="p-6 lg:p-8">
									<img
										src={partner.logo.src}
										alt={partner.name}
										class="h-8 mb-4 dark:brightness-200 dark:contrast-75"
									/>
									<p class="text-base text-neutral-600 dark:text-neutral-400">
										{partner.description}
									</p>
								</div>
							</div>
						))}
					</div>
				</div>
			</Col>
		</Row>
	</Section>

	<!-- Team Section -->
	<Section decorationBorder="none">
		<Row decorationBorder="top bottom" decorationBorderStyle="dashed" style="transparent">
			<Col span="12" style="transparent">
				<div class="bg-white/80 dark:bg-neutral-950/80">
					<div class="pt-12 pb-4 lg:pt-16">
						<Header title="Team of specialist consultants" headingLevel="h2" titleWidth="max-w-2xl" />
					</div>
					<p class="px-6 pb-8 text-lg text-neutral-600 lg:px-8 lg:text-xl dark:text-neutral-400">
						We're a collective of deep experts. No generalists. No gurus. Just people who know their craft, are eager to explore, learn and dive deep.
					</p>
					<div class="grid grid-cols-2 lg:grid-cols-3 border-t border-dashed border-neutral-200 dark:border-neutral-700">
						{teamMembers.map((member) => (
							<div class="team-card group relative aspect-square cursor-pointer overflow-hidden border-r border-b border-dashed border-neutral-200 bg-neutral-100 transition-all duration-300 dark:border-neutral-700 dark:bg-neutral-900">
								<!-- Photo with B&W filter -->
								<img
									src={member.photo}
									alt={member.name}
									class="absolute inset-0 h-full w-full object-cover grayscale transition-all duration-500 group-hover:scale-110"
									style={member.objectPosition ? `object-position: ${member.objectPosition}` : undefined}
								/>
								<!-- Gradient overlay for text readability -->
								<div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent transition-opacity duration-300 group-hover:opacity-0"></div>
								<!-- Default State: Name & Title -->
								<div class="absolute inset-0 flex flex-col items-start justify-end p-4 lg:p-6 transition-opacity duration-300 group-hover:opacity-0">
									<h3 class="mb-1 text-base font-semibold text-white! lg:text-xl drop-shadow-md">
										{member.name}
									</h3>
									<p class="text-sm text-white/80 lg:text-base drop-shadow-md">
										{member.title}
									</p>
								</div>
								<!-- Hover State: Description -->
								<div class="absolute inset-0 flex flex-col items-start justify-end bg-primary-500/70 p-4 lg:p-6 opacity-0 transition-opacity duration-300 group-hover:opacity-100">
									<h3 class="mb-2 text-base font-semibold text-white! lg:text-xl">
										{member.name}
									</h3>
									<p class="text-sm text-white/90 lg:text-base">
										{member.description}
									</p>
								</div>
							</div>
						))}
					</div>
				</div>
			</Col>
		</Row>
	</Section>

	<!-- Values Section -->
	<Section decorationBorder="none">
		<Row decorationBorder="top bottom" decorationBorderStyle="dashed" style="transparent">
			<Col span="12" style="transparent">
				<div class="bg-white/80 dark:bg-neutral-950/80">
					<div class="pt-12 pb-8 lg:pt-16">
						<Header title="What We Believe" headingLevel="h2" titleWidth="max-w-2xl" />
					</div>
					<div class="grid grid-cols-1 lg:grid-cols-2">
						{valuesData.map((item) => (
							<div class="border-t border-dashed border-neutral-200 dark:border-neutral-700">
								<FeatureBasicCard
									title={item.title}
									decorationType="none"
								>
									{item.description}
								</FeatureBasicCard>
							</div>
						))}
					</div>
				</div>
			</Col>
		</Row>
	</Section>

	<CTA
		title={ctaData.title}
		text={ctaData.text}
		buttonLink={ctaData.buttonLink}
		buttonText={ctaData.buttonText}
	/>
</Layout>

<style>
	@reference '../styles/global.css';
	/* Remove right border on last column in each row */
	.team-card:nth-child(2n) {
		@apply border-r-0;
	}
	.team-card:nth-child(3n) {
		@apply lg:border-r-0;
	}
	/* Restore right border on cards that are 2n but not 3n in desktop view */
	.team-card:nth-child(2) {
		@apply lg:border-r;
	}
	.team-card:nth-child(4) {
		@apply lg:border-r;
	}
	/* Remove bottom border on last row */
	.team-card:nth-last-child(-n+3) {
		@apply lg:border-b-0;
	}
	.team-card:nth-last-child(-n+2) {
		@apply border-b-0;
	}
</style>
