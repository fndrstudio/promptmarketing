---
// 404 Page
// ------------
// Description: The 404 page is a page that displays when a page is not found.

// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - Blocks
import BasicHeroSplitImageCTA from '../components/blocks/hero/BasicHeroSplitImageCTA.astro'

// Content
// - Images
import image from '../assets/steps/steps/step_01_front.png'
// - SEO
const SEO = {
	title: 'Oops! Empty office, empty page - Page Not Found',
	description:
		'The page you’re looking for isn’t here. Try going back to the homepage or browsing our sections.'
}
// - Hero data
const heroData = {
	title: 'Oops! Empty office, empty page',
	subtitle: '404 page not found',
	text: 'The page you’re looking for isn’t here. Try going back to the homepage or browsing our sections.',
	image: image,
	buttonText: 'Back to Homepage',
	buttonLink: '/'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<BasicHeroSplitImageCTA
		subtitle={heroData.subtitle}
		title={heroData.title}
		text={heroData.text}
		image={heroData.image}
		buttonText={heroData.buttonText}
		buttonLink={heroData.buttonLink}
	/>
</Layout>
