---
// How We Work Page
// ------------
// Description: Deep dive into the 4-step methodology

// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - SEO Schemas
import ServiceSchema from '../components/seo/ServiceSchema.astro'
// - Layout components
import Section from '../components/ui/Section.astro'
import Row from '../components/ui/Row.astro'
import Col from '../components/ui/Col.astro'
// - Blocks
import Hero from '../components/blocks/hero/SimpleHeroPrimary.astro'
import BasicFeatures from '../components/blocks/features/StickyBasicFeatures.astro'
import CTA from '../components/blocks/cta/CTAPrimary.astro'
// - UI
import Header from '../components/ui/Header.astro'
import FeatureBasicCard from '../components/ui/cards/FeatureBasicCard.astro'

// Content
// - SEO
const SEO = {
	title: 'PromptMarketing | How We Work',
	description:
		'Our four-step methodology: Intelligence, Optimization, Commerce, and Advertising. A systematic approach to making brands visible and trustworthy to AI systems.'
}
// - Hero
const heroData = {
	title: 'Our Four-Step Solution',
	subtitle: 'How We Work',
	text: 'A systematic methodology for optimising for AI Search. We diagnose, architect, prepare, and amplifyâ€”turning AI visibility from guesswork into engineering.'
}
// - CTA
const ctaData = {
	title: 'Ready to Start?',
	text: 'Every engagement begins with understanding where you stand. Book a consultation to discuss your AI visibility challenges and explore the right starting point.',
	buttonLink: '/contact',
	buttonText: 'Get in Touch'
}
// - Pillars data
const pillarsData = [
	{
		title: '01. Machine Readability First',
		description: 'We build structured data architectures that move beyond "best practices" to create verifiable machine trust.'
	},
	{
		title: '02. Probabilistic, Not Guaranteed',
		description: 'We acknowledge that LLMs are probabilistic; our work focuses on influencing the weights and associations within the latent space to favor your brand.'
	},
	{
		title: '03. Data Provenance',
		description: 'In the era of synthesis, verifiable data is currency. We establish clear provenance chains that AI agents can validate for transaction.'
	},
	{
		title: '04. The Long Game',
		description: 'We avoid "hacks." We build technical foundations that evolve as models update, ensuring long-term visibility without technical debt.'
	}
]
---

<Layout title={SEO.title} description={SEO.description}>
	<ServiceSchema
		name="Prompt Intelligence"
		description="Measurement and research services including Competitive Visibility Analysis, AI Selection Rate tracking, and LLM Brand Sentiment studies. Understand how AI systems currently perceive and represent your brand."
	/>
	<ServiceSchema
		name="Relevance Engineering"
		description="Technical optimization including Structured Data implementation, Entity Optimization, and Content Authority Signals. Architect the knowledge layers that ensure your brand is understood by AI systems."
	/>
	<ServiceSchema
		name="Agentic Commerce"
		description="AI-native transaction preparation including Agent Protocol Setup and Commerce Graph optimization. Prepare your business for AI-driven discovery and purchasing decisions."
	/>
	<ServiceSchema
		name="AI Advertising"
		description="Generative Engine Advertising strategy and campaign management. Navigate paid channels in the emerging AI-mediated advertising landscape."
	/>
	<Hero title={heroData.title} subtitle={heroData.subtitle} text={heroData.text} />
	<BasicFeatures />

	<!-- Four Pillars Section -->
	<Section decorationBorder="none">
		<Row decorationBorder="top bottom" decorationBorderStyle="dashed" style="transparent">
			<Col span="12" style="transparent">
				<div class="bg-white/80 dark:bg-neutral-950/80">
					<div class="pt-12 pb-8 lg:pt-16">
						<Header title="The Four Pillars of Relevance Engineering" headingLevel="h2" titleWidth="max-w-3xl" />
					</div>
					<div class="grid grid-cols-1 lg:grid-cols-2">
						{pillarsData.map((item) => (
							<div class="border-t border-dashed border-neutral-200 dark:border-neutral-700">
								<FeatureBasicCard
									title={item.title}
									decorationType="none"
								>
									{item.description}
								</FeatureBasicCard>
							</div>
						))}
					</div>
				</div>
			</Col>
		</Row>
	</Section>

	<CTA
		title={ctaData.title}
		text={ctaData.text}
		buttonLink={ctaData.buttonLink}
		buttonText={ctaData.buttonText}
	/>
</Layout>
