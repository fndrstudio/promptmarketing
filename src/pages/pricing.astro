---
// Home Page
// ------------
// Description: The home page is a page that displays the most important information.

// Components
// - Layout
import Layout from '../layouts/Layout.astro'

// - Blocks
import Hero from '../components/blocks/hero/SimpleHeroBasic.astro'
import BasicTable from '../components/blocks/pricing/BasicTable.astro'
import Brand from '../components/blocks/brand/Marquee.astro'
import Faq from '../components/blocks/faq/StickyFaq.astro'
import CTA from '../components/blocks/cta/CTAPrimary.astro'

// Content
// - SEO
const SEO = {
	title: 'PromptMarketing | Pricing',
	description:
		'Find the right PromptMarketing engagement for your brand. Transparent pricing for organizations ready to become machine-readable.'
}
// - Hero data
const heroData = {
	title: 'Choose the plan that fits your workflow',
	subtitle: 'Simple, Fair Pricing',
	text: 'Whether you’re just starting out or scaling fast, we’ve got a plan that keeps things simple and transparent — no hidden fees, cancel anytime.'
}
// - Brand data
const brandData = {
	title: 'Built in collaboration with'
}
// - FAQ data
const faqData = {
	title: 'Everything you need to know',
	subtitle: 'Frequently Asked Questions'
}
// - CTA data
const ctaData = {
	title: 'Launch your next big idea today',
	text: 'Join creators, teams, and startups already turning their ideas into reality. Get started in minutes and see how simple launching can be when everything works together seamlessly.',
	buttonLink: '/pricing',
	buttonText: 'Try it for free!'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={heroData.title} subtitle={heroData.subtitle} text={heroData.text} />
	<BasicTable />
	<Brand title={brandData.title} />
	<Faq subtitle={faqData.subtitle} title={faqData.title} />
	<CTA
		title={ctaData.title}
		text={ctaData.text}
		buttonLink={ctaData.buttonLink}
		buttonText={ctaData.buttonText}
	/>
</Layout>
