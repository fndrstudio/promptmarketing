---
// Home Page
// ------------
// Description: The home page is a page that displays the most important information.

// Components
// - Layout
import Layout from '../layouts/Layout.astro'

// - Blocks
import Hero from '../components/blocks/hero/CenteredHeroCTA.astro'
import Brand from '../components/blocks/brand/Marquee.astro'
import Features from '../components/blocks/features/MasonryGrid.astro'
import ScrollSpySteps from '../components/blocks/onboarding/Steps.astro'
import TestimonialMasonry from '../components/blocks/testimonials/TestimonialMasonry.astro'
import Faq from '../components/blocks/faq/StickyFaq.astro'
import CTA from '../components/blocks/cta/CTAPrimary.astro'

// Content
// - SEO
const SEO = {
	title: 'PromptMarketing | Operationalizing Machine Trust',
	description:
		'Empower your brand through Relevance Engineering. We architect the knowledge layers that ensure brands are understood, trusted, and successfully represented by AI systems.'
}
// - Hero data
const heroData = {
	title: 'Launch smarter Start faster',
	subtitle: 'build for the future',
	buttonLink: '/pricing',
	buttonText: 'Try it for free!',
	text: 'Let AI handle the heavy lifting — from data insights to launch strategies — so you can focus on creating products that customers love'
}
// - Brand data
const brandData = {
	title: 'Built in collaboration with'
}
// - Testimonial data
const testimonialData = {
	title: 'Loved by early adopters everywhere',
	subtitle: 'What other are saying'
}
// - FAQ data
const faqData = {
	title: 'Frequently Asked Questions',
	subtitle: 'Everything you need to know'
}
// - CTA data
const ctaData = {
	title: 'Launch your next big idea today',
	text: 'Join creators, teams, and startups already turning their ideas into reality. Get started in minutes and see how simple launching can be when everything works together seamlessly.',
	buttonLink: '/pricing',
	buttonText: 'Try it for free!'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero
		title={heroData.title}
		subtitle={heroData.subtitle}
		buttonLink={heroData.buttonLink}
		buttonText={heroData.buttonText}
	/>
	<Brand title={brandData.title} />
	<Features />
	<ScrollSpySteps />
	<TestimonialMasonry title={testimonialData.title} subtitle={testimonialData.subtitle} />
	<Faq subtitle={faqData.subtitle} title={faqData.title} />
	<CTA
		title={ctaData.title}
		text={ctaData.text}
		buttonLink={ctaData.buttonLink}
		buttonText={ctaData.buttonText}
	/>
</Layout>
