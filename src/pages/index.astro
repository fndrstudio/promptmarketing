---
// Home Page
// ------------
// Description: The home page is a page that displays the most important information.

// Components
// - Layout
import Layout from '../layouts/Layout.astro'

// - Blocks
import Hero from '../components/blocks/hero/CenteredHeroCTA.astro'
import Brand from '../components/blocks/brand/Marquee.astro'
import Features from '../components/blocks/features/StickyBasicFeatures.astro'
import ScrollSpySteps from '../components/blocks/onboarding/Steps.astro'
import TestimonialMasonry from '../components/blocks/testimonials/TestimonialMasonry.astro'
import Faq from '../components/blocks/faq/StickyFaq.astro'
import CTA from '../components/blocks/cta/CTAPrimary.astro'

// Content
// - SEO
const SEO = {
	title: 'PromptMarketing | Operationalizing Machine Trust',
	description:
		'We architect the knowledge layers that ensure brands are understood, trusted, and successfully represented by AI systems. Relevance Engineering for the AI-first economy.'
}
// - Hero data
const heroData = {
	title: 'Operationalizing Machine Trust',
	subtitle: 'Relevance Engineering',
	buttonLink: '/contact',
	buttonText: 'Get Started'
}
// - Brand data
const brandData = {
	title: 'Trusted by forward-thinking brands'
}
// - Testimonial data
const testimonialData = {
	title: 'What clients say about the results',
	subtitle: 'Real outcomes, measured impact'
}
// - FAQ data
const faqData = {
	title: 'Common Questions',
	subtitle: 'About Relevance Engineering'
}
// - CTA data
const ctaData = {
	title: 'Ready to become machine-readable?',
	text: "Let's map your brand's position in the latent space and show you exactly where the gaps are.",
	buttonLink: '/contact',
	buttonText: 'Get Started'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero
		title={heroData.title}
		subtitle={heroData.subtitle}
		buttonLink={heroData.buttonLink}
		buttonText={heroData.buttonText}
	/>
	<Brand title={brandData.title} />
	<Features />
	<ScrollSpySteps />
	<TestimonialMasonry title={testimonialData.title} subtitle={testimonialData.subtitle} />
	<Faq subtitle={faqData.subtitle} title={faqData.title} />
	<CTA
		title={ctaData.title}
		text={ctaData.text}
		buttonLink={ctaData.buttonLink}
		buttonText={ctaData.buttonText}
	/>
</Layout>
