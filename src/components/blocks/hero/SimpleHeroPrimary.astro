---
// Simple Hero Primary
// ------------
// Description: A hero section with a title and a subtitle, with a primary background
// Properties:
// - title: The title of the hero section
// - subtitle: The subtitle of the hero section
// - text: The text of the hero section
// - titleWidth: The width of the title
// - classes: Additional classes for the section

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import Header from '../../ui/Header.astro'

// Content
// - Props
type Props = {
	title?: string
	titleWidth?: string
	subtitle?: string
	text?: string
	classes?: string
	textClasses?: string
}
const {
	title = '',
	titleWidth = 'max-w-4xl',
	subtitle,
	text = '',
	classes = '',
	textClasses = ''
} = Astro.props
---

<Section classes={`${classes ? classes : ''}`} spacerTop={true}>
	<Row style="transparent">
		<Col span="12" style="transparent">
			<div class="hero">
				<Header
					title={title}
					subtitle={subtitle}
					titleWidth={titleWidth}
					titleClasses="bg-primary-600 text-white!"
					subtitleClasses="text-white!"
					decorationClasses="opacity-50"
				/>
				<div class="px-6 text-white! lg:px-8">
					<p
						class:list={[
							'mb-0! max-w-md pt-6 text-xl leading-9 lg:pt-12',
							{ [`${textClasses}`]: textClasses }
						]}
					>
						{text}
					</p>
				</div>
			</div>
		</Col>
	</Row>
</Section>

<style>
	@reference '../../../styles/global.css';
	.hero {
		@apply bg-primary-600 relative bg-[url('/bgs/dot-gray-transparent.svg')] bg-size-[18px] bg-fixed py-16 lg:py-24;
	}
</style>
