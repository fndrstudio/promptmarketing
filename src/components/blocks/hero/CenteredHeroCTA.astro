---
// Centered Hero CTA
// ------------
// Description: A hero section with a title and a subtitle, with a centered image
// Properties:
// - title: The title of the hero section
// - subtitle: The subtitle of the hero section
// - text: The text of the hero section
// - buttonText: The text of the button
// - buttonLink: The link of the button
// - buttonClasses: Additional classes for the button
// - classes: Additional classes for the section

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
import Button from '../../ui/Button.astro'
// - UI
import Header from '../../ui/Header.astro'

// - Props
type Props = {
	title?: string
	subtitle?: string
	text?: string
	titleSpan?: string
	buttonText?: string
	buttonLink?: string
	buttonClasses?: string
	classes?: string
	image?: string
}
const {
	title = '',
	text = '',
	subtitle = '',
	buttonText = '',
	buttonClasses = 'w-full lg:w-auto',
	buttonLink = '/',
	classes = '',
	image
} = Astro.props
---

<Section classes={`${classes ? classes : ''}`} spacerTop={true}>
	<Row classes="gap-y-0!">
		<!-- Intro Text -->
		<Col span="12" classes="pt-16 lg:pt-24">
			<Header title={title} classes="text-center" titleWidth="mx-auto max-w-3xl" />
			{
				subtitle && (
					<p class="mx-auto mt-6 max-w-3xl px-6 text-center text-xl leading-relaxed text-neutral-600 lg:px-8 lg:text-2xl dark:text-neutral-400">
						{subtitle}
					</p>
				)
			}
		</Col>

		<Col
			span="12"
			classes=" bg-[url('/bgs/dot-gray-light.svg')] bg-size-[18px] dark:bg-[url('/bgs/dot-gray-dark.svg')] "
		>
			<div class="mt-10 mb-16 flex justify-center">
				<Button classes={buttonClasses} link={buttonLink}>{buttonText}</Button>
			</div>
			<div data-parallax-offset="80" class="parallax relative mx-auto w-full max-w-[1024px] -mt-5">
				<!-- Video behind frame -->
				<video
					src="/video-scherm.mp4"
					autoplay
					loop
					muted
					playsinline
					class="absolute top-[calc(3%+30px)] left-1/2 w-[87%] -translate-x-1/2"></video>
				<!-- Frame overlay -->
				<img src="/frame.png" alt="" class="relative z-10 block w-full" />
			</div>
		</Col>
	</Row>
</Section>
